<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Qualidade</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>FiltroAutenticacao</filter-name>
        <filter-class>gerenciador.filters.FiltroAutenticacao</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroAutenticacao</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>EditarFuncionarioServlet</servlet-name>
        <servlet-class>gerenciador.servlets.EditarFuncionarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExibeDocumentos</servlet-name>
        <servlet-class>gerenciador.servlets.ExibeDocumentos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FrontControllerServlet</servlet-name>
        <servlet-class>gerenciador.servlets.FrontControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CriarFuncionarioServlet</servlet-name>
        <servlet-class>gerenciador.servlets.CriarFuncionarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>gerenciador.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>gerenciador.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditarFuncionarioServlet</servlet-name>
        <url-pattern>/EditarFuncionarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExibeDocumentos</servlet-name>
        <url-pattern>/ExibeDocumentos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontControllerServlet</servlet-name>
        <url-pattern>/FrontControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CriarFuncionarioServlet</servlet-name>
        <url-pattern>/CriarFuncionarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
